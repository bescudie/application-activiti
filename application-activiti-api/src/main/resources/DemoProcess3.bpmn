<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:activiti="http://activiti.org/bpmn" xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" xmlns:omgdc="http://www.omg.org/spec/DD/20100524/DC" xmlns:omgdi="http://www.omg.org/spec/DD/20100524/DI" typeLanguage="http://www.w3.org/2001/XMLSchema" expressionLanguage="http://www.w3.org/1999/XPath" targetNamespace="http://www.activiti.org/test">
  <process id="demoProcess3" name="Demo Process 3" isExecutable="true">
    <documentation>Demo Process 3. User Task, Script Task. Creates XWiki documents automatically.</documentation>
    <startEvent id="startevent1" name="Start"></startEvent>
    <endEvent id="endevent1" name="End"></endEvent>
    <userTask id="usertask1" name="Enter Information" activiti:candidateGroups="xwiki:XWiki.Evaluare">
      <documentation>Add some simple information</documentation>
      <extensionElements>
        <activiti:formProperty id="name" name="Your Name" type="string" required="true"></activiti:formProperty>
        <activiti:formProperty id="email" name="Your E-Mail" type="string" required="true"></activiti:formProperty>
        <activiti:formProperty id="ammount" name="Ammount Requested" type="long" required="true"></activiti:formProperty>
        <activiti:formProperty id="criteria" name="Criteria Met" type="boolean" required="true"></activiti:formProperty>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow4" sourceRef="startevent1" targetRef="usertask1"></sequenceFlow>
    <scriptTask id="scripttask1" name="Script Task" scriptFormat="groovy" activiti:autoStoreVariables="true">
      <script>import java.util.Random  
Random rand = new Random() 
def targetDocRef = services.model.createDocumentReference('xwiki', 'ActivitiReports', "Page ${rand.nextInt(10)}")
def targetdoc = xwiki.getDocument(targetDocRef)
targetdoc.setContent('Generated from Activiti ScriptTask. ' +'\n' +'Name: ' + execution.getVariable('name') + '\n' + 'Email: ' + execution.getVariable('email') + '\n' + 'Ammount: ' + execution.getVariable('ammount') + '\n' + 'Criteria: ' + execution.getVariable('criteria') + '\n' + 'Final Decision: ' + execution.getVariable('approve') );
targetdoc.save()
def webhome = xwiki.getDocument('Main.WebHome');
println(webhome);
def objects = webhome.getObject('XWiki.EditModeClass');
println(objects);
def property = objects.getProperty('defaultEditMode');
println(property)
println(property.getValue());
System.out.println("Generated Page:  " + targetDocRef)</script>
    </scriptTask>
    <sequenceFlow id="flow6" sourceRef="scripttask1" targetRef="endevent1"></sequenceFlow>
    <userTask id="usertask2" name="Approve" activiti:candidateUsers="xwiki:XWiki.sorinello">
      <documentation>Final Evaluation</documentation>
      <extensionElements>
        <activiti:formProperty id="approve" name="Approve" type="boolean"></activiti:formProperty>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow7" sourceRef="usertask1" targetRef="usertask2"></sequenceFlow>
    <sequenceFlow id="flow8" sourceRef="usertask2" targetRef="scripttask1"></sequenceFlow>
  </process>
